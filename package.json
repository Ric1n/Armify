{
  "name": "SpotiWeb",
  "version": "0.1.0",
  "description": "Electron wrapper of play.spotify.com",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",

    "package": "electron-packager ./ SpotiWeb --platform=all --arch=all --version=0.36.2 --app-version=$npm_package_version --build-version=$npm_package_version --out=./releases --asar=false --overwrite --icon=./assets/icon.icns --ignore=\"releases|dist|npm-debug.log|node_modules/electron-(builder|packager|prebuilt)\"",
    "package:mac": "electron-packager ./ SpotiWeb --platform=darwin --arch=all --version=0.36.2 --app-version=$npm_package_version --build-version=$npm_package_version --out=./releases --asar=false --overwrite --icon=./assets/icon.icns --ignore=\"releases|dist|npm-debug.log|node_modules/electron-(builder|packager|prebuilt)\"",
    "package:win": "electron-packager ./ SpotiWeb --platform=win32 --arch=all --version=0.36.2 --app-version=$npm_package_version --build-version=$npm_package_version --out=./releases --asar=false --overwrite --icon=./assets/icon.icns --ignore=\"releases|dist|npm-debug.log|node_modules/electron-(builder|packager|prebuilt)\"",
    "package:linux": "electron-packager ./ SpotiWeb --platform=linux --arch=all --version=0.36.2 --app-version=$npm_package_version --build-version=$npm_package_version --out=./releases --asar=false --overwrite --icon=./assets/icon.icns --ignore=\"releases|dist|npm-debug.log|node_modules/electron-(builder|packager|prebuilt)\"",

    "zip:mac": "./mac.sh",
    "zip:win": "./win.sh",
    "zip:linux": "./linux.sh",
    "zip": "npm run zip:mac && npm run zip:win && npm run zip:linux",

    "build:mac": "npm run package:mac && npm run zip:mac",
    "build:win": "npm run package:win && npm run zip:win",
    "build:linux": "npm run package:linux && npm run zip:linux",
    "build": "npm run build:mac && npm run build:win && npm run build:linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atom/electron-quick-start.git"
  },
  "keywords": [
    "Electron",
    "Spotify",
    "Web"
  ],
  "author": "tomasmcm",
  "license": "CC0-1.0",
  "homepage": "https://github.com/tomasmcm/spotiweb",
  "dependencies": {
    "electron-builder": "^2.6.0",
    "electron-packager": "^5.2.0",
    "electron-prebuilt": "^0.36.2",
    "path": "^0.12.7"
  }
}
